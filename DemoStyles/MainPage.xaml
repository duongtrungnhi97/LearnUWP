                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF99D1D3" Offset="1"/>
                    <GradientStop Color="#FF8DA8A9" Offset="0.64"/>
                </LinearGradientBrush>
            </Grid.Background>

        </Grid>
        <Grid Grid.Column="1" Margin="42,0,1180,0">

            
        </Grid>
    </Grid>
